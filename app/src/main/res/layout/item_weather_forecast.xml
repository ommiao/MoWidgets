<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/shape_bg_weather_forecast"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/shape_mask_weather_forecast"
        android:tint="@color/colorPrimary"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginBottom="3dp"
                android:fontFamily="@font/product"
                tools:text="20/5"/>

            <TextView
                android:id="@+id/tv_weather_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:ellipsize="end"
                android:maxLines="1"
                android:fontFamily="@font/product"
                android:layout_marginBottom="3dp"
                tools:text="白天晴   夜间晴   温度12° - 19°"/>

            <TextView
                android:id="@+id/tv_sun_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:ellipsize="end"
                android:maxLines="1"
                android:fontFamily="@font/product"
                android:layout_marginBottom="3dp"
                tools:text="日出06:49  日落17:39"/>

            <TextView
                android:id="@+id/tv_wind_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:ellipsize="end"
                android:maxLines="1"
                android:fontFamily="@font/product"
                tools:text="1-2级北风"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_weather"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="20dp"
            android:src="@drawable/weather_clear_day_pixel"
            android:layout_gravity="top|end"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:fontFamily="@font/product"
        android:textSize="12sp"
        android:layout_gravity="end|bottom"
        android:layout_margin="5dp"
        android:text="2019-05-20 13:14"/>


</FrameLayout>