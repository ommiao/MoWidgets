<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/lock"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x122"
        android:background="@drawable/shape_circle_left_and_right_transwhite"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/x19"
        android:padding="@dimen/x21"
        android:elevation="@dimen/x16">

        <ImageView
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/x60"
            android:layout_marginStart="@dimen/x13"
            android:src="@drawable/ic_super_g_color"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_slogan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x26"
            android:layout_marginEnd="@dimen/x26"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="end"
            android:maxLines="1"
            android:text="@string/slogan_google_now"
            android:textColor="@color/greyWhite"
            android:textSize="@dimen/x39" />

        <ImageView
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/x50"
            android:layout_marginEnd="@dimen/x26"
            android:src="@drawable/opa_assistant_logo"
            tools:ignore="ContentDescription" />

    </LinearLayout>

</FrameLayout>
